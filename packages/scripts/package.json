{
    "name": "@next-boilerplate/scripts",
    "version": "0.0.0",
    "scripts": {
        "build": "tsc && tsc-alias",
        "type-check": "tsc --noEmit",
        "init": "npm run -s build && node ./dist/init/index.js",
        "init:build-packages": "node ./dist/init/build-packages/exec.js",
        "project-postinstall": "node ./dist/project-postinstall/exec.js",
        "project-postinstall:install-zsh": "node ./dist/project-postinstall/install-zsh/exec.js",
        "project-postinstall:install-extensions": "node ./dist/project-postinstall/install-extensions/exec.js",
        "project-postinstall:install-git-hooks": "node ./dist/project-postinstall/install-git-hooks/exec.js",
        "ci-check": "run-s -s ci-check:*",
        "ci-check:devcontainer-extensions": "node ./dist/ci-check/devcontainer-extensions.js",
        "ci-check:banned-keywords": "node ./dist/ci-check/banned-keywords.js",
        "ci-check:templates-config": "node ./dist/ci-check/templates-config.js",
        "ci-check:cli-components": "node ./dist/ci-check/cli-components.js",
        "depcheck": "node ./dist/depcheck-test/index.js",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "prettier": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
        "prettier:fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\""
    },
    "exports": {
        "./*": "./dist/*",
        "./utils/template-config": {
            "types": "./dist/utils/template-config/index.d.ts",
            "default": "./dist/utils/template-config/index.js"
        },
        "./utils/template-config/apply": {
            "types": "./dist/utils/template-config/apply.d.ts",
            "default": "./dist/utils/template-config/apply.js"
        }
    },
    "devDependencies": {
        "@next-boilerplate/eslint": "*",
        "@next-boilerplate/prettier": "*",
        "depcheck": "^1.4.7",
        "npm-run-all2": "^5.0.0",
        "tsc-alias": "^1.8.10",
        "typescript": "^5.5.4",
        "zod": "^3.23.8",
        "zx": "^8.1.4"
    },
    "type": "module",
    "dependencies": {
        "@rharkor/logger": "^1.3.1",
        "@rharkor/task": "^1.0.1",
        "@rharkor/utils": "^0.1.3",
        "fs-extra": "^11.2.0"
    }
}