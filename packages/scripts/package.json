{
    "name": "@next-boilerplate/scripts",
    "version": "0.0.0",
    "scripts": {
        "build": "tsc && tsc-alias",
        "type-check": "tsc --noEmit",
        "init": "npm run -s build && node ./dist/init/index.js",
        "init:build-packages": "node ./dist/init/build-packages/exec.js",
        "project-postinstall": "node ./dist/postinstall/exec.js",
        "project-postinstall:install-zsh": "node ./dist/postinstall/install-zsh/exec.js",
        "project-postinstall:install-extensions": "node ./dist/postinstall/install-extensions/exec.js",
        "project-postinstall:install-git-hooks": "node ./dist/postinstall/install-git-hooks/exec.js",
        "ci-check": "run-p ci-check:*",
        "ci-check:devcontainer-extensions": "node ./dist/ci-check/devcontainer-extensions.js",
        "ci-check:banned-keywords": "node ./dist/ci-check/banned-keywords.js",
        "ci-check:templates-config": "node ./dist/ci-check/templates-config.js",
        "cli:fix-templates-config": "node ./dist/cli/apply-template-config.js",
        "depcheck": "node ./dist/depcheck-test/index.js",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "prettier": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
        "prettier:fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\""
    },
    "devDependencies": {
        "@next-boilerplate/eslint": "*",
        "@next-boilerplate/prettier": "*",
        "depcheck": "^1.4.7",
        "globby": "^14.0.2",
        "npm-run-all": "^4.1.5",
        "tsc-alias": "^1.8.10",
        "typescript": "^5.5.4",
        "zod": "^3.23.8",
        "zx": "^8.1.4"
    },
    "type": "module",
    "dependencies": {
        "@rharkor/logger": "^1.2.2",
        "@rharkor/utils": "^0.1.3"
    }
}
