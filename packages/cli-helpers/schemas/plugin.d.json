{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "source": {
            "type": "string"
        },
        "paths": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "from": {
                        "type": "string"
                    },
                    "to": {
                        "type": "string"
                    }
                }
            }
        },
        "scripts": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "replaceByProjectName": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "search": {
                            "type": "string",
                            "description": "The string to search for and replace"
                        },
                        "root": {
                            "type": "string",
                            "description": "Root path to search in"
                        },
                        "paths": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Specific file or folder paths to search in"
                        }
                    },
                    "oneOf": [
                        {
                            "required": [
                                "search",
                                "root"
                            ]
                        },
                        {
                            "required": [
                                "search",
                                "paths"
                            ]
                        }
                    ]
                }
            }
        }
    },
    "required": [
        "$schema",
        "name",
        "description",
        "paths"
    ]
}