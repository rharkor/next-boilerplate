{
    "name": "@next-boilerplate/cli-helpers",
    "version": "0.0.0",
    "scripts": {
        "build": "pkgroll --export-condition=node --conditions=node --clean-dist",
        "type-check": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "prettier": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
        "prettier:fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\""
    },
    "files": [
        "dist",
        "schemas"
    ],
    "exports": {
        "./apply": {
            "require": {
                "types": "./dist/apply.d.cts",
                "default": "./dist/apply.cjs"
            },
            "import": {
                "types": "./dist/apply.d.mts",
                "default": "./dist/apply.mjs"
            }
        },
        "./config": {
            "require": {
                "types": "./dist/config/index.d.cts",
                "default": "./dist/config/index.cjs"
            },
            "import": {
                "types": "./dist/config/index.d.mts",
                "default": "./dist/config/index.mjs"
            }
        },
        "./plugins": {
            "require": {
                "types": "./dist/plugins/index.d.cts",
                "default": "./dist/plugins/index.cjs"
            },
            "import": {
                "types": "./dist/plugins/index.d.mts",
                "default": "./dist/plugins/index.mjs"
            }
        },
        "./stores": {
            "require": {
                "types": "./dist/stores/index.d.cts",
                "default": "./dist/stores/index.cjs"
            },
            "import": {
                "types": "./dist/stores/index.d.mts",
                "default": "./dist/stores/index.mjs"
            }
        },
        "./stores-helpers": {
            "require": {
                "types": "./dist/stores/helpers.d.cts",
                "default": "./dist/stores/helpers.cjs"
            },
            "import": {
                "types": "./dist/stores/helpers.d.mts",
                "default": "./dist/stores/helpers.mjs"
            }
        },
        "./templates": {
            "require": {
                "types": "./dist/templates/index.d.cts",
                "default": "./dist/templates/index.cjs"
            },
            "import": {
                "types": "./dist/templates/index.d.mts",
                "default": "./dist/templates/index.mjs"
            }
        },
        "./utils": {
            "require": {
                "types": "./dist/utils/index.d.cts",
                "default": "./dist/utils/index.cjs"
            },
            "import": {
                "types": "./dist/utils/index.d.mts",
                "default": "./dist/utils/index.mjs"
            }
        }
    },
    "keywords": [
        "cli",
        "sdk",
        "next-boilerplate",
        "tools",
        "boilerplate",
        "monorepo",
        "nextjs"
    ],
    "homepage": "https://github.com/rharkor/next-boilerplate/tree/main/packages/cli-helper",
    "author": "HUORT Louis (https://louis.huort.com)",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rharkor/next-boilerplate.git"
    },
    "license": "MIT",
    "description": "CLI helper for Next Boilerplate",
    "devDependencies": {
        "@inquirer/prompts": "^5.3.7",
        "@next-boilerplate/cli-app": "*",
        "@next-boilerplate/eslint": "*",
        "@next-boilerplate/prettier": "*",
        "@next-boilerplate/tsconfig": "*",
        "@rharkor/logger": "^1.3.1",
        "@types/minimist": "^1.2.5",
        "@types/node": "^20.4.9",
        "commander": "^12.1.0",
        "minimist": "^1.2.8",
        "open": "^10.1.0",
        "pkgroll": "^2.4.2",
        "tsx": "^4.16.5",
        "typescript": "^5.5.4",
        "wait-port": "^1.1.0"
    },
    "type": "module",
    "private": false,
    "publishConfig": {
        "access": "public"
    }
}